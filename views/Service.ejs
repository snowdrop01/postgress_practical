                    <div class="form-outline mb-4">
                      <input type="text" id="form3Example1q" class="form-control" name="user_name" required/>
                      <label class="form-label" for="form3Example1q">Customer Name</label>
                    </div>

                    <div class="form-outline mb-4">
                        <input type="text" id="form3Example1q" class="form-control"  name="veh_no"required/>
                        <label class="form-label" for="form3Example1">Vehicle no.</label>
                      </div>
      
                    <div class="row">
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline datepicker">
                          <input type="date" class="form-control" id="exampleDatepicker1" name="pick_dt" required/>
                          <label for="exampleDatepicker1" class="form-label">Pickup date</label>
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline datepicker">
                          <input type="date" class="form-control" id="exampleDatepicker1"  name="drop_dt"required/>
                          <label for="exampleDatepicker1" class="form-label">Drop date</label>
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <select class="select" name="location" required>
                          <option value="1" disabled>location</option>
                          <option value="2">Ahemdabad</option>
                          <option value="3">Surat</option>
                          <option value="4">Rajkot</option>
                        </select>
      
                      </div>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="number" id="form3Example1q" class="form-control" name="service_price" required/>
                        <label class="form-label" for="form3Example1">Service Price</label>
                      </div>

                      <div class="form-outline mb-4">
                        <input type="number" id="form3Example1q" class="form-control" name="pay_amount" required/>
                        <label class="form-label" for="form3Example1">Payable Amount</label>
                      </div>
      
      
        
                    <button type="submit" class="btn btn-success btn-lg mb-1">Submit</button>
      
                  </form>
      
                </div>
